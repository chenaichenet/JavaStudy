<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="userDao" class="com.impl.UserImpl"></bean>

    <!--set注入-->
    <bean id="student1" class="com.impl.Student">
        <property name="name" value="十七"/>
        <property name="age" value="20"/>
        <property name="school" ref="school"/>
    </bean>

    <bean id="school" class="com.impl.School">
        <property name="name" value="一个大学"/>
        <property name="address" value="一个地方"/>
    </bean>

    <!--使用name属性实现构造注入-->
    <!--使用index属性实现构造注入-->
    <bean id="student2" class="com.impl.Student">
        <constructor-arg name="name" value="十九"/>
        <constructor-arg name="age" value="100"/>
        <constructor-arg index="2" ref="school"/>
    </bean>

</beans>