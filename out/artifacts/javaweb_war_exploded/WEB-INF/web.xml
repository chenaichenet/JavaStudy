<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>SetAttribute</servlet-name>
        <servlet-class>com.test.servlet.SetAttributeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetAttribute</servlet-name>
        <servlet-class>com.test.servlet.GetAttributeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletConfig</servlet-name>
        <servlet-class>com.test.servlet.ServletConfigServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetResourcePaths</servlet-name>
        <servlet-class>com.test.servlet.GetResourcePathsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VisitCount</servlet-name>
        <servlet-class>com.test.servlet.VisitCountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClassLoader</servlet-name>
        <servlet-class>com.test.servlet.ClassLoaderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BaseDemo</servlet-name>
        <servlet-class>com.test.servlet.BaseDemoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>User</servlet-name>
        <servlet-class>com.test.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Out</servlet-name>
        <servlet-class>com.test.servlet.OutServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>SetAttribute</servlet-name>
        <url-pattern>/SetAttribute</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetAttribute</servlet-name>
        <url-pattern>/GetAttribute</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletConfig</servlet-name>
        <url-pattern>/ServletConfig</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetResourcePaths</servlet-name>
        <url-pattern>/GetResourcePaths</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VisitCount</servlet-name>
        <url-pattern>/VisitCount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClassLoader</servlet-name>
        <url-pattern>/ClassLoader</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BaseDemo</servlet-name>
        <url-pattern>/BaseDemo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>User</servlet-name>
        <url-pattern>/User</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Out</servlet-name>
        <url-pattern>/Out</url-pattern>
    </servlet-mapping>


    <context-param>
        <param-name>name</param-name>
        <param-value>value</param-value>
    </context-param>

    <filter>
        <filter-name>FistFilter</filter-name>
        <filter-class>com.test.filter.FirstFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FistFilter</filter-name>
        <url-pattern>/Out</url-pattern>
    </filter-mapping>

</web-app>